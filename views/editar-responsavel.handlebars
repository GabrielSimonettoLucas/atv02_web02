<form action="/post-edit-responsavel" method="post">
    <h1>Edição de RESPONSAVEL DE PROJETO</h1>
    <input type="hidden" name="id" value="{{responsavel.id}}">
    <p>RA:</p>
    <input type="text" name="cpf" value="{{responsavel.cpf}}"> <br>
    <p>Nome:</p> 
    <input type="text" name="nome" value="{{responsavel.nome}}">
    <br><br>
    <input type="text" name="idade" value="{{responsavel.idade}}">
    <br><br>
    <input type="text" name="email" value="{{responsavel.email}}">
    <br><br>
    <input type="submit" value="Editar">
</form>